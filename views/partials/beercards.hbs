<div class="card my-3">
    <div class="card-image p-3 text-center">
      <img src="{{this.image_url}}" alt="Picture of {{this.name}} Beer" height="200 " class="mx-auto"/>
    </div>
    <div class="card-body">
      <a href="/beers/{{this.id}}"><h3 class="card-title">{{this.name}}</h3></a>
      <p class="lead card-text">
        {{this.tagline}}
      </p>
      <p class="card-text">
        {{this.description}}
      </p>
    </div>
  </div>